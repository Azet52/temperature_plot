<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin"
    android:weightSum="1">

    <TextView
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:text="/therm01/"
        android:id="@+id/textSource"
        android:layout_gravity="right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:id="@+id/scrollView"
        android:layout_gravity="right" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <HorizontalScrollView
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView"
            android:layout_weight="0.10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageMainValue"
            android:src="@drawable/still" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="19dp"
            android:id="@+id/scrollView2"
            android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/textMainValue"
                android:textSize="60dp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView2"
            android:layout_weight="-.10" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="taken at: Mon Jan 01 00:00:00 CEST 2014"
        android:id="@+id/textAtTime"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:id="@+id/scrollView4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="6.69" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/lin2">

        <HorizontalScrollView
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView4" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/scrollView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average temperature: "
                android:id="@+id/textView"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:id="@+id/imageAverageValue"
            android:src="@drawable/still" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:id="@+id/scrollView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/textAverageValue"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>